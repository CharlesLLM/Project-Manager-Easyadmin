{% extends 'base.html.twig' %}

{% block title %}{{ 'title.projects'|trans }}{% endblock %}

{% block body %}
    <div class="w-full max-w-screen-xl mx-auto p-6">
        <div class="bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden">
            <div class="sm:flex sm:items-center p-4">
                <div class="flex-grow">
                    <h2 class="font-bold p-2 leading-tight">Projets</h2>
                    <div class="relative z-10">
                        <ul class="my-4 mx-auto max-w-xs text-left font-medium text-lg leading-none border-blue-200 divide-y divide-blue-200">
                            {% for project in projects %}
                                <li>
                                    <a href="{{ path('app_project_view', { id: project.id }) }}" class="py-5 w-full flex items-center text-blue-500 hover:text-blue-700 hover:bg-blue-50">
                                        {% if project.thumbnailName %}
                                            {% set filePath = 'img/projects/' ~ project.thumbnailName %}
                                            <img src="{{ asset(filePath) }}" alt="{{ project.thumbnailName }}" class="max-w-32 max-h-16 w-auto h-auto">
                                        {% else %}
                                            <span class="ml-5 w-1 h-7 bg-blue-500 rounded-md hover:text-blue-dark"></span>
                                        {% endif %}
                                        <p class="ml-2.5">{{ project.name }}</p>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
